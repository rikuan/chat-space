.side_bar
  .side_menu
    .side_topics
      .user_name
        = current_user.name
      .icons
        .icon1
          =link_to new_group_path, class: 'icon_1st'  do
            = icon('fas','edit')
        .icon2
          =link_to edit_user_path(current_user), class: 'icon_2nd' do
          
            = icon('fas','cog')
            
  .main
    .Groups
      - current_user.groups.each do |group|
        .group_list
          = link_to group_messages_path(group),class: "groupStyle" do
            .group_list__name 
              = group.name
            .group_list__messege
              = group.show_last_message